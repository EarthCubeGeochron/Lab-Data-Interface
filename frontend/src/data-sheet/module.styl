.data-sheet
  position fixed
  top 50px
  left 0px
  right 0px
  bottom 1px
  display flex
  flex-direction column
  tbody
    overflow-y scroll
    padding-bottom 2em
  // https://css-tricks.com/position-sticky-and-table-headers/
  th
    position sticky
    top 0
    background-color: whitesmoke

:global
  .sheet-header, .sheet-actions
    display flex
    flex-direction row

  .sheet-header
    padding-top 1em

  .sheet
    flex 1
    position relative

  table.data-grid
    display block
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    overflow-y scroll
