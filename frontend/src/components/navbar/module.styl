@require '~app/shared/mixins'
@require '~app/shared/colors'

.app-navbar
  border-radius: 5px

.minimal-navbar
  display: flex
  flex-direction: row
  align-items: baseline
  minimal-navbar()
  h4
    margin: 0
    padding: 0.1em 1em 0.1em 0.4em
    color: #5c7080
    min-width: 5em

.auth-right
  position absolute
  right 0.2em

.navbar-button
  margin-right: 1em
  &.active
    background-color: #d8e1e8
