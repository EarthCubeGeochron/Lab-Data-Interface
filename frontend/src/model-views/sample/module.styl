@require "~app/shared/colors"

.sample-list-card
  h4
    font-weight 500
    .name
      font-weight 600
      color black
  margin 10px 1px
  div.material
    font-style italic

.sample-card
  background-color: $light-gray4
  border-radius: 5px
  margin: 5px
  padding: 5px 10px
  flex-grow: 1
  max-width: 15em
  .location-name
    color: $indigo3
  .material
    font-style italic
  h4
    margin-top: 0em
    margin-bottom: 0em

.basic-info
  h4
    color $gray1
    margin-bottom: 0.3em

h3.page-type
  font-size 1.2em
  color $gray5

.location
  display flex 
  flex-direction column
  justify-content flex-end
  padding 0
  .location-name
    font-weight 400
    margin-top 0
    font-style italic

.flex-row
  display flex
  flex-direction row
  margin-right -1em
  justify-content space-between
  // .info-block
  //   flex-grow 1
  &>*
    margin-right 1em

.sample-edit-card
  display flex
  justify-content space-between
  align-items baseline
  background-color: $light-gray4
  border-radius: 5px
  margin: 5px
  padding: 5px 10px
  flex-grow: 1
  max-width: 20em
  .location-name
    color: $indigo3
  .material
    font-style italic
  .samhover
    background-color yellow
  h4
    margin-top: 0em
    margin-bottom: 0em

.sample-edit-card-samhover
  display flex
  justify-content space-between
  align-items baseline
  background-color: yellow
  border-radius: 5px
  margin: 5px
  padding: 5px 10px
  flex-grow: 1
  max-width: 20em
  .location-name
    color: $indigo3
  .material
    font-style italic
  .samhover
    background-color yellow
  h4
    margin-top: 0em
    margin-bottom: 0em

.pub-edit-card
  display flex
  background-color: $light-gray4
  border-radius: 5px
  margin: 5px
  padding: 5px 10px
  flex-grow: 1
  //max-width: 15em

.lon-lat
  margin 0
  display flex
  justify-content flex-end
  font-style italic
  color #394B59

.location-editor
  display flex
  padding 0

.session-info
  display flex
  flex-direction column