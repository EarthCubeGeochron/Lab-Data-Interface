.add-sample
    display flex
    flex-direction column
    flex-wrap wrap

.dialog-container
    display flex 
    justify-content space-between

.add-sample-btn
    border-color #5C7080
    border-style solid
    border-width .5px
    border-radius 5px
    margin-bottom 10px
    padding 3px
    &:hover
        background-color #BFCCD6
        cursor pointer
    &:active
        background-color #8A9BA8
    
.remove-sample-btn
    border-color #5C7080
    border-style solid
    border-width .5px
    border-radius 5px
    margin-bottom 10px
    padding 3px
    &:hover
        background-color #FF7373
        cursor pointer
    &:active
        background-color #C23030
