*
  box-sizing: border-box

page_margin=2em

body
  margin 0
  padding 0
  min-height: 100vh

#container
  max-width 60em
  margin 0 auto
  min-height: 100vh

@import './colors'

h1.site-title
  color $gray1
  span.subtitle, span.inner
    display: inline-block
    margin-left 0.3em
  span.subtitle
    color: $gray1
  span.subpage
    color: $gray1

nav.site-nav ul
  display flex
  flex-direction row
  margin 0.5em 0 1em
  list-style none
  padding-left 0
  li
    margin-right 1em
    a
      font-size 1.2em

div.api-result-placeholder
  padding 2em 4em
  flex-grow 1
  display flex
  justify-content center
  align-items center
