.bp3-dark .data-sheet
  --datasheet-read-only-background: $dark-gray3

.data-sheet
  --datasheet-read-only-background: whitesmoke
  position absolute
  top 0px
  left 2em
  right 2em
  bottom 0px
  display flex
  flex-direction column
  tbody
    padding-bottom 2em
  // https://css-tricks.com/position-sticky-and-table-headers/
  th
    position sticky
    top 0
    background-color: var(--datasheet-read-only-background)

.virtualized-sheet
  position: absolute;
  top: 0px
  bottom: 0px
  left 0em
  right 0em
  overflow-y scroll

  .ui
    position: sticky
    top: 0px
    bottom: 0px
    left 0px
    right 0px

:global
  .sheet-header, .sheet-actions
    display flex
    flex-direction row
    align-items: baseline;

  .sheet-actions
    &>*
      display inline-block
      margin-right 0.5em

  .sheet-header
    padding-top 1em
    margin-bottom 0.5em
    h3
      padding 0
      margin 0
      margin-right 1em
      color $gray1

  .sheet
    flex 1
    position relative

  table.data-grid
    display block
    position absolute
    top 0
    left 0
    right 0
    bottom 0
