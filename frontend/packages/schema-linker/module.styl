.term-card
  padding 5px
  max-width 250px
  h4
    margin-top 0
    margin-bottom 4px
    flex-grow 1
  .row
    display flex
    flex-direction row
    align-items: baseline
  p
    margin-bottom 0
    font-style italic
  .authority
    color var(--text-color-dim)
  .description
    color var(--text-color-muted)
    font-size 0.8em
    font-style italic
  margin-bottom 0.5em