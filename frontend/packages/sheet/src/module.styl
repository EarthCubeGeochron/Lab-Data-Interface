.header-cell
  position relative
  overflow visible !important
  border-right: 1px solid #888
  .cell-content
    width 100%

thead
  position relative
  .cell-drag-handle
    display: none
  &:hover
    .cell-drag-handle
      display: block

.cell-drag-handle
  top 0
  left -3px
  bottom 0
  width 6px
  display: block
  position absolute
  background: #999
  cursor: ew-resize
  z-index: 50