.header-cell
  position relative
  border-right: 1px solid #888
  .cell-content
    width 100%
    height 100%
  .cell-drag-handle
    display: none
  &:hover
    .cell-drag-handle
      display: block

.cell-drag-handle
  top 0
  right 2px
  bottom 0
  width 4px
  display: block
  position absolute
  background: red