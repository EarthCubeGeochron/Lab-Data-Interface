{
  "emitDeclarationOnly": true,
  "allowJS": true,
  "checkJS": true,
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "dist/types",
    "lib": ["es6", "es7", "esnext", "dom", "es2017"],
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "plugins",
    "default-content",
    "packages/sheet/src/components.ts",
    "packages/sheet/src/virtualized.ts",
    "packages/sheet/src/provider.ts"
  ]
}
