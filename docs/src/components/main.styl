sans = "Montserrat", sans-serif
main = "Merriweather", serif

c1 = #085f63
c2 = #49beb7
c3 = #f5e1da
c4 = #f1f1f1
c5 = #eeeeee
c6 = #d8cbbb
c7 = #ffd98e
c8 = #ffb677
c9 = #ff8364

//#ff8364
