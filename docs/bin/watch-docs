#!/usr/bin/env zsh

docs_dir="${0:h:h:A}"
cd "$docs_dir"

rm -rf public
mkdir -p public
mkdir -p build

function finish {
  echo "Exiting..."
  kill $pid1 $pid2
}

trap finish INT

export SPARROW_SECRET_KEY="Freedom!!"

schema=${0:A:h:h}/backend/sparrow/sql/02-create-tables.sql

if [ ${1:-""} != '--only-frontend' ]; then

  echo $schema
  ${0:h}/build-schema > build/schema.html
  sphinx-autobuild -p 8001 "python-api/source" "python-api/build/html" &
  pid1=$!

fi

gatsby develop &
pid2=$!

wait $pid1 $pid2
